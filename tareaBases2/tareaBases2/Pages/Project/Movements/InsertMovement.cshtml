@page
@model tareaBases2.Pages.Project.Movements.InsertMovementModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar empleado</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Insertar movimiento</h2>

        <form method="POST">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Identificación</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="identificacion" value="@Model.infoEmpleyee.Identificacion" readonly>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Nombre</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="nombre" value="@Model.infoEmpleyee.Nombre" readonly>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Saldo vacaciones</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="saldoVacaciones" value="@Model.infoEmpleyee.SaldoVaciones" readonly>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Puesto</label>
                <div class="col-sm-6">
                    <select class="form-select" id="puesto" name="puesto">
                        <option value="">Selecciona un puesto</option>
                        @foreach (var tipoMovimiento in Model.listaTipoMovimiento)
                        {
                            <option value="@tipoMovimiento.id">@tipoMovimiento.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Monto</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="monto" value="@Model.monto">
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/Project/Employees/Index" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
